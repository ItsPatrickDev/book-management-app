@using BooksManager.Domain.Enums
@using BooksManager.WebApp.Extensions
@model BooksManager.Domain.Entities.Shelf
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="info-container" style="margin-top: 40px; margin-bottom: 30px;">
    <div class="shelf-header">
        <i onclick="pageJS.goBack()" class="bi bi-chevron-left arrow-back"></i><h3>Create Shelf</h3>
    </div>
</div>
<hr />
<div class="container">
    <form asp-action="CreateShelf" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="nameInput" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control" id="nameInput">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Shelves">Cancel</a>
    </form>
</div>

<script src="~/js/common-view.js"></script>
