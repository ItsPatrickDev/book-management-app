@using BooksManager.Business.Models
@model IEnumerable<ShelfModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="info-container" style="margin-top: 40px;">
    <h3>Book Shelves</h3>
    <a class="btn btn-primary" asp-action="CreateShelf" asp-controller="Shelves">Create</a>
</div>
<hr />
@if (!Model.Any())
{
    <p>No shelves</p>
}
else
{
    <div class="container-grid">
        @foreach (var shelf in Model)
        {
            <div class="grid-item" id="@shelf.Id" data-id="@shelf.Id">
                <p class="item-name">@shelf.Name</p>
                <p class="item-count">Count: @(shelf.Books?.Count ?? 0)</p>
                <div>
                    <button class="btn btn-primary item-button shelfView-item">View</button>
                    <button class="btn btn-danger item-button removeShelf-item">Remove</button>
                </div>
            </div>
        }
    </div>
}

<div class="modal fade" id="removeShelfModal" tabindex="-1" role="dialog" aria-labelledby="removeShelfModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="removeShelfModalLabel">Remove book</h5>
                <i class="bi bi-x-lg" data-dismiss="modal" aria-label="Close" style="cursor: pointer;"></i>
            </div>
            <div class="modal-body alert-warning">
                <p>Are you sure you want remove this shelf?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="removeShelf">Remove</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/shelves/index-view.js"></script>
<script>
    $(document).ready(function () {
        pageJS.setPage();
    })
</script>
